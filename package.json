    "web",
    "presentations",
    "slides"
  ],
  "files": [
    "index.js",
    "template",
    "LICENSE"
  ],
  "repository": "nextbitlabs/onepunch",
  "bugs": "https://github.com/nextbitlabs/onepunch/issues",
  "homepage": "https://github.com/nextbitlabs/onepunch",
  "author": {
    "name": "Riccardo Scalco",
    "url": "https://riccardoscalco.github.io/"
  },
  "license": "MIT",
  "dependencies": {
    "alive-server": "^1.2.9",
    "chalk": "^5.0.1",
    "fs-extra": "^10.1.0",
    "meow": "^10.1.3",
    "ora": "^6.1.2",
    "puppeteer": "^18.0.2"
  },
  "devDependencies": {
    "np": "^7.0.0",
    "xo": "^0.52.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "xo": {
    "envs": [
      "browser"
