{
  "name": "@nextbitlabs/onepunch",
  "version": "2.6.2",
  "description": "Command-line interface to create PDF presentations using web technology.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "xo index.js template/src/index.js",
    "release": "np"
